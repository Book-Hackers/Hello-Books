
<div class="cart-page">

<div class="cart-container">
{{#each books as |book| }}
{{#each ../cartItems as |cartItem|}}
{{#ifEquals book.id  cartItem.book_id}}


<div data-id="{{book.id}}" class="book-in-cart">
    <h2 class="cartTitle">{{book.title}}</h2>
    <h3 class="cartAuthor">{{book.author}}</h3>
    <div class="bookCartBtns">

    <button data-id="{{book.id}}" class="remove-from-cart">Remove From Cart</button>
    <button data-id="{{book.id}}" class="viewBookCart">View Book</button>
    </div>
</div>


{{/ifEquals}}

{{/each}}
{{/each}}
    
</div>
<div class="cartBtnContainer">
<button class="checkout">Checkout!</button>


</div>
</div>

<script src="/js/cart.js"></script>
